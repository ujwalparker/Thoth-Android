<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/thoth_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/thoth_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/thoth_image"
        android:gravity="center_vertical|bottom"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/no_nw_up_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/no_nw_up_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/no_nw_up_pb"
        android:layout_marginTop="5dp"
        android:text="Log Upload (1/200)"
        android:textColor="#666666"
        android:textSize="10dp" >
    </TextView>

    <TextView
        android:id="@+id/no_nw_up_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thoth_image"
        android:layout_alignLeft="@+id/thoth_name"
        android:text="Server update in progress."
        android:textColor="#666666"
        android:textSize="14dp" >
    </TextView>

</RelativeLayout>