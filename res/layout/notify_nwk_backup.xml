<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/thoth_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/thoth_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/thoth_image"
        android:gravity="center_vertical|bottom"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_nw_up_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="00:00 on 01/01/1984"
        android:textColor="#666666"
        android:textSize="10dp" >
    </TextView>

    <TextView
        android:id="@+id/no_nw_up_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thoth_image"
        android:layout_alignLeft="@+id/thoth_name"
        android:text="Your logs were successfully backed up."
        android:textColor="#FF226622"
        android:textSize="14dp" >
    </TextView>

</RelativeLayout>